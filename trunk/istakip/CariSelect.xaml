<UserControl x:Class="istakip.CariSelect"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="300"  Width="600" xmlns:my="http://schemas.microsoft.com/wpf/2008/toolkit">
    <Grid Background="Azure" Opacity="0.98">
        <my:DataGrid AutoGenerateColumns="False" Margin="0,35,6,12" Name="dataGridSearch" IsReadOnly="True" SelectionMode="Single" />
            <Button Height="23" HorizontalAlignment="Left" Margin="6,6,0,0" Name="buttonSearchSelect" VerticalAlignment="Top" Width="75" Click="buttonSearchSelect_Click">Seç</Button>
            <Button Height="23" Margin="0,6,6,0" Name="buttonSearchCancel" VerticalAlignment="Top" Grid.Column="1" HorizontalAlignment="Right" Width="75" Click="buttonSearchCancel_Click">İptal</Button>
    </Grid>
</UserControl>
