        <my:DataGrid AutoGenerateColumns="False" Grid.Column="1" Name="dataGrid1" Margin="19,31,0,0" Grid.Row="1" />
        <my:DataGrid AutoGenerateColumns="False" Name="dataGrid2" Margin="0,0,0,9" />
        <my:DatePicker Grid.Column="1" Height="25" Margin="0,84,33,0" Name="datePicker1" VerticalAlignment="Top" HorizontalAlignment="Right" Width="115.104" />
        <Separator Height="5" Margin="0,0,0,1" Name="separator1" VerticalAlignment="Bottom" />
        <GridSplitter Grid.Column="1" HorizontalAlignment="Left" Margin="0,4,0,0" Name="gridSplitter1" Width="5" Grid.RowSpan="2" />
    </Grid>
</UserControl>
